{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "inlineSourceMap": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "strict": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "outDir": "./lib",
        "baseUrl": "./src",
        "lib": ["es2017", "esnext"],
        "types": ["node"]
    },
}
